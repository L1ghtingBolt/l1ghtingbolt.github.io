---
import Nav from '../components/Nav.jsx'
import ProjectsView from '../components/ProjectsView.jsx'
let allProjects = await Astro.fetchContent('./projects/*.md');
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="stylesheet"
			href={Astro.resolve("../styles/global.css")}
		>
		<title>Gerardo Jimenez</title>
		<style global>
			@import '../styles/global.css';
		</style>
	</head>

	<body class="dark:bg-slate-900 bg-white text-black dark:text-white">
		<Nav/>
		<ProjectsView projects={allProjects}/>
	</body>
</html>